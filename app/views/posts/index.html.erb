<div class="container-fluid">
  <div class="row">
    <div class="col-md-8">
      <% @posts.each do |i| %>
      <div class="post">
        <div class="row">
          <div class="col-sm-4 hidden-xs">
            <%= image_tag i.image.url(:medium), class: "img" %>
          </div>
          <div class="col-md-8">
            <div class="content">
              <h3><a href="/posts/<%= i.id %>"><%= i.title %></a></h3>
              <div class="text"><%= truncate(raw(i.content), length: 300, escape: false) %></div>
              <div class="info"><%= i.created_at.strftime('%d/%m/%Y %H:%M') %></div>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>
		<%= render 'shared/right_menu' %>
  </div>
</div>
