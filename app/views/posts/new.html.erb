<h1><%= _('Create new Post') %></h1>
<% if current_user %>
	<%= form_for Post.new do |p| %>

		<p>Title:		<%= p.text_field :title     %></p>
		<p>Text:	  <%= p.text_field :text      %></p>

		<p><%= p.submit _('Create Post') %></p>

	<% end %>
<% else %>
	<% controller.redirect_to login_path %>
<% end %>
