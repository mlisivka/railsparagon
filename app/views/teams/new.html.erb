<% if current_user %>
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-4 col-md-offset-4">
  			<div class="cover">
  		    <div class="title"><%= _('Create new Team') %></div>
          <div class="team-create">
    		    <%= form_for Team.new do |i| %>
              <div class="form-group">
                <%= i.label :full_name, _('Full Team Name') + ":" %>
                <%= i.text_field :full_name, class: "form-control" %>
              </div>
              <div class="form-group">
                <%= i.label :tag_name, _('Team Tag / Abbreviation') + ":" %>
                <%= i.text_field :tag_name, class: "form-control" %>
              </div>
              <div class="form-group">
                <%= label_tag :friends, _('Enter the names of users to invite them to this team')%>
                <%= text_field_tag 'friends[]', nil, class: "form-control team-friend" %>
								<%= text_field_tag 'friends[]', nil, class: "form-control team-friend" %>
								<%= text_field_tag 'friends[]', nil, class: "form-control team-friend" %>
								<%= text_field_tag 'friends[]', nil, class: "form-control team-friend" %>
              </div>
              <%= i.submit _('Create Team'), class: "btn btn-primary" %>
    		    <% end %>
          </div>
  		  </div>
      </div>
		</div>
	</div>
<% else %>
  <% controller.redirect_to login_path %>
<% end %>
