<h1>This team/index</h1>
<a href="teams/1">Show you teams</a>
<div class="container">
  <div class="title">All Teams</div>
  <div class="cover">
    <table class="table table-hover">
      <thead>
        <tr>
      		<th>Id</th>
      		<th><%= _('Name') %></th>
      		<th><%= _('Country') %></th>
      		<th><%= _('Rating') %></th>
      		<th><%= _('Captain') %></th>
      		<th><%= _('Players') %></th>
      	</tr>
      </thead>
      <tbody>
        <% @teams.each do |i| %>
        	<tr>
        		<td><%= i.id %></td>
        		<td><%= i.full_name %></td>
            <td><%= i.country %></td>
            <td><%= i.rating %></td>
            <td><%= i.captain_id %></td>
            <td>
              <%= i.users.map(&:name).to_sentence %>
            </td>
        	</tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
