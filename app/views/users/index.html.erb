<div class="container">
  <div class="title">All Users</div>
  <div class="cover">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>id</th>
          <th><%= _('Team|Name') %></th>
          <th><%= _('Teams') %></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |i| %>
         <tr>
           <td><%= i.id %></td>
           <td><%= link_to i.name, user_path(i) %></td>
           <td>
             <%= i.teams.map(&:full_name).to_sentence %>
           </td>
         </tr>
       <% end %>
      </tbody>
    </table>
  </div>
</div>
