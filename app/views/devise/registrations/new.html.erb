<div class="container">
	<div class="row">

			<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-sign" }) do |f| %>
			  <%= devise_error_messages! %>
			
			    <h2 class="form-signup-heading"><%= _('Please sign up') %></h2>
			    <%= f.label :name, _('User name') , class: "sr-only" %>
			    <%= f.text_field :name, placeholder: _('User name'), required: true, autofocus: true, class: "form-control" %>
			    <%= f.label :email, _('Email') , class: "sr-only"  %>
			    <%= f.email_field :email, placeholder: _('Email'), required: true, class: "form-control"  %>
			    <%= f.label :password, _('Password') , class: "sr-only" %>
			    <%= f.password_field :password, placeholder: _('Password'),  required: true, class: "form-control" %>
			  	<%= f.password_field :confirm_password, placeholder: _('Confirm Password'),  required: true, class: "form-control" %>
			
			    <%= f.submit s_('User|Sign up'), class: "btn btn-lg btn-primary btn-block" %>
					
					<%= render "devise/shared/links" %>
					
			<% end %>
			
	</div>
</div>