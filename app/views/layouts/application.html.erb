<!DOCTYPE html>
<html>
  <head>
		
    <title>ParagonRails</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
		<meta name="google-site-verification" content="KyfySNzoGJK-uKC5P_7X6_qk32BcsW2qdm1-bP3kRYo" />
  </head>
  <body>
    <nav class="navbar navbar-inverse navbar-static-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle pull-left" data-toggle="collapse" data-target="#responsive-menu">
            <span class="sr-only ">Open navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/"><%= image_tag "logo.gif" %></a>
        </div>
        <div class="collapse navbar-collapse" id="responsive-menu">
          <ul class="nav navbar-nav">
            <li><a href="/tournaments">Tournament</a></li>
            <li><a href="/users">Profile</a></li>
            <li><a href="/teams">Team</a></li>
            <li><a href="/matches">Match</a></li>
            <li><a href="/teams/new">NewTm</a></li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
						<li id="divider"></li>
            <% if current_user %>
							<% unless team_invite.empty? %>
							<li>
								<span id="notify-cl" class="glyphicon glyphicon-envelope" style="color: white;float: left;margin-top: 15px;font-size:20px;margin-right: 10px;"></span>
								<div id="notify" class="notify" style="display: none">
									<% team_invite.each do |i| %>
                      <div class="notify-main">
                      	<input type="hidden" name="id" value="<%= i.id %>">
                        <b><%= link_to i.sender.name, user_path(i.sender) %></b>
                        invites you to the team
                        <b><%= link_to i.team.full_name, team_path(i.team) %></b>
                        <div class="notify-btn">
                          <a class="btn btn-warning btn-sm" value="false">Reject</a>
                          <a class="btn btn-success btn-sm" value="true">Accept</a>
                        </div>
                      </div>
                	<% end %>
                 </div>
                </li>
								<% end %>
							<li><%= link_to current_user.name, current_user, style: "color:#fff" %></li>
              <li><a href="/logout"><span class="glyphicon glyphicon-log-out"></span> Logout</a></li>
            <% else %>
              <li><a href="/login"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
              <li><a href="/signup"><span class="glyphicon glyphicon-user"></span> Sign Up</a></li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>

    <% flash.each do |key, value| %>
      <%= content_tag(:div, class: "alert alert-success fade in", id: "success-alert") do %>
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        <strong>Success!<%= key %></strong><%= value %>
      <% end %>
    <% end %>

    <%= yield %>
    <footer class="footer">
      <div class="container">
  		  <p class="navbar-text pull-left" style="text-align: center;width: 100%;margin-left: auto">
  			Copyright Â© 2016 - Site Built By SpiriKoN
  		  </p>
      </div>
    </footer>
  </body>
</html>
