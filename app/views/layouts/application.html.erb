<!DOCTYPE html>
<html>
  <head>
    <title>ParagonRails</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true, async: 'async' %>
    <%= csrf_meta_tags %>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
  </head>
  <body>
    <nav class="navbar navbar-inverse navbar-static-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle pull-left" data-toggle="collapse" data-target="#responsive-menu">
            <span class="sr-only ">Open navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/"><img src="http://placehold.it/120x20"></img></a>
        </div>
        <div class="collapse navbar-collapse" id="responsive-menu">
          <ul class="nav navbar-nav">
            <li><a href="/tournaments">Tournament</a></li>
            <li><a href="/users">Profile</a></li>
            <li><a href="/teams">Team</a></li>
            <li><a href="/matches">Match</a></li>
            <li><a href="/teams/new">NewTm</a></li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <% if current_user %>
              <% if current_user %>
                <% team_invite.each do |i| %>
                  <li>
                    <span id="notify-cl" class="glyphicon glyphicon-envelope" style="color: white;float: left;margin-top: 15px;font-size:20px;margin-right: 10px;"></span>
                    <div id="demo" class="notify" style="display: none">
                      <div class="notify-main">
                        <b><%= link_to i.sender.name, user_path(i.sender) %></b>
                        invites you to the team
                        <b><%= link_to i.team.full_name, team_path(i.team) %></b>
                        <div class="notify-btn">
                          <a class="btn btn-warning btn-sm">Reject</a>
                          <a class="btn btn-success btn-sm">Accept</a>
                        </div>
                      </div>
                    </div>
                  </li>
                <% end %>
              <% end %>
              <div style="color: white;float: left;margin-top: 15px;"><%= current_user.name %></div>
              <li><a href="/logout"><span class="glyphicon glyphicon-log-out"></span> Logout</a></li>
            <% else %>
              <li><a href="/login"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
              <li><a href="signup.html"><span class="glyphicon glyphicon-user"></span> Sign Up</a></li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>

    <% flash.each do |key, value| %>
      <%= content_tag(:div, class: "alert alert-success fade in", id: "success-alert") do %>
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        <strong>Success!<%= key %></strong><%= value %>
      <% end %>
    <% end %>

    <%= yield %>
    <footer class="footer">
      <div class="container">
  		  <p class="navbar-text pull-left" style="text-align: center;width: 100%;margin-left: auto">
  			Copyright Â© 2016 - Site Built By SpiriKoN
  		  </p>
      </div>
    </footer>
  </body>
</html>
