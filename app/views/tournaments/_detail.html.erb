<div class="team-info" style="background: #fff">
  <img src="http://placehold.it/60">
  <%= s_('Team|Name') %>: <%= @current_team.full_name %>
</div>
<div class="team-player">
  <ul class="list-group">
    <% @current_team.users.each do |i| %>
      <li class="list-group-item"><%= i.name %></li>
    <% end %>
  </ul>
</div>
