<div class="container">
  <div class="row">
    <div class="container">
      <div class="title">Registration</div>
      <div class="col-sm-4">
        <div class="tournament-info-sm">
          <li>Name&nbsp;&nbsp;Tournament #1</li>
          <li>prize pool&nbsp;&nbsp;<span class="label label-warning">100$</span></li>
          <li>payment&nbsp;&nbsp;<span class="label label-warning">10$</span></li>
          <li>date begin&nbsp;&nbsp; 20.08.2017 14:30</li>
        </div>
        <% if current_user %>
        <div id="pick-team">
          <%= form_tag({action: :registration_team}, {method: :get}) do %>
            <lable>
            <%= select_tag 'team_id', options_for_select(@teams.collect{ |i| [i.full_name, i.id] }), class: 'team-select btn btn-primary form-control', prompt: "Choose Team" %></lable>
            <%= submit_tag "Send", class: "btn btn-primary", id: "btn-send" %>
          <% end %>
          <div id="team-detail">
          </div>
        </div>
        <% else %>
          <div>To register for the tournament you need to be authorized</div>
          <%= link_to "Log in", login_path %>
        <% end %>
      </div>
      <div class="col-sm-8">
        <div class="party-teams">
          <table class="table table-condensed">
            <thead>
              <tr>
                <th>#</th>
                <th></th>
                <th>Name</th>
              </tr>
            </thead>
            <tbody>
							<% @registered_team.each_with_index do |i, index| %>
              	<tr>
              	  <td><%= index+1 %></td>
              	  <td><img src="http://placehold.it/30" alt=""></td>
              	  <td><%= i.full_name %></td>
              	</tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>

    </div>
  </div>
</div>
